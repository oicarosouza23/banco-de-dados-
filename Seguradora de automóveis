CREATE DATABASE SeguradoraAuto;

USE SeguradoraAuto;

CREATE TABLE Cliente (
  ClienteID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  Nome VARCHAR(255) NOT NULL,
  Endereco VARCHAR(255) NOT NULL
);

CREATE TABLE Apolice (
  ApoliceID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  Valor DECIMAL(10,2) NOT NULL,
  ClienteID INT NOT NULL,
  CarroID INT NOT NULL,
  FOREIGN KEY (ClienteID) REFERENCES Cliente(ClienteID),
  FOREIGN KEY (CarroID) REFERENCES Carro(CarroID)
);

CREATE TABLE Carro (
  CarroID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  Registro VARCHAR(255) NOT NULL,
  Marca VARCHAR(255) NOT NULL
);

CREATE TABLE Acidente (
  AcidenteID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  Data DATE NOT NULL,
  Hora TIME NOT NULL,
  Local VARCHAR(255) NOT NULL,
  CarroID INT NOT NULL,
  FOREIGN KEY (CarroID) REFERENCES Carro(CarroID)
);
